{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Mint Starter Kit",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Billing Components",
            "pages": [
              "documentation/billing/components/contract",
              "documentation/billing/components/fee-component",
              "documentation/billing/components/usage-driver",
              "documentation/billing/components/rate-card"
            ]
          },
          {
            "group": "Usage API",
            "pages": ["documentation/billing/apis/add-usage"]
          },
          {
            "group": "Billing API",
            "pages": [
              "api-reference/endpoint/create-contract",
              "api-reference/endpoint/ratecard",
              "api-reference/endpoint/fee-comp",
              "api-reference/endpoint/contract-fee-comp",
              "api-reference/endpoint/usage-driver",
              "api-reference/endpoint/usage-driver-filter"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": []
    }
  },
  "api": {
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": [
        "curl",
        "python",
        "javascript",
        "typescript",
        "go",
        "java",
        "php",
        "ruby",
        "swift",
        "kotlin",
        "csharp",
        "dart"
      ],
      "defaults": "required"
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:updates@valyx.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "footer": {
    "socials": {
      "linkedin": "https://linkedin.com/company/valyx"
    }
  }
}
